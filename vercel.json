{
  "version": 2,
  "builds": [
    { "src": "api/recommend.py",     "use": "@vercel/python"  },
    { "src": "index.html",           "use": "@vercel/static"  },
    { "src": "static/**/*",          "use": "@vercel/static"  }
  ],
  "routes": [
    { "src": "/get_recommendations", "dest": "/api/recommend.py" },
    { "src": "/static/(.*)",         "dest": "/static/$1"       },
    { "src": "/",                    "dest": "/index.html"      }
  ]
}


